{% extends 'base.html.twig' %}

{% block title %}Gestion des salles - Smart Campus{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Lalezar' rel='stylesheet'>
    <link rel="stylesheet" href="{{ asset('css/actions.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

    <style>
        tr td:nth-child(5) {
            display: flex;
            justify-content: flex-end;
            margin-left: -200px;
            padding-right: 92px;
        }
    </style>

{% endblock %}

{% block body %}

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>

    <script src="{{ asset('js/search.js') }}"></script>

    <div class="container">
        <h1  class="main-title display-4 mb-4">Gestion des salles</h1>

        {# Formulaire de recherche et filtres #}
        <form id="filterForm" method="get" action="{{ path('app_room') }}" class="widget-info-div row mb-3 g-2">
            <div class="search-bar-container">
                <div class="input-group mb-3">
                    <label for="searchBar" class="searchTextField">
                        <input type="text" id="searchBar" name="name" class="form-control" placeholder="Rechercher une salle" value="{{ searchTerm }}" />
                    </label>

                    <button type="submit" class="btn btn-success bi bi-search"></button>
                    <button type="button" onclick="clearSearch()" class="btn btn-danger"><i class="bi bi-x-lg"></i></button>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center">

                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_add_room') }}" class="btn btn-success custom-select">Ajouter une salle</a>
                {% endif %}

                <div class="filter-selects">
                    <label for="floorFilter">
                        <select name="floor" class="form-select custom-select" onchange="this.form.submit()">
                            <option value="all" {% if floorFilter == 'all' or not floorFilter %}selected{% endif %}>Tous les étages</option>
                            <option value="Rez-de-chaussée" {% if floorFilter == 'Rez-de-chaussée' %}selected{% endif %}>Rez-de-chaussée</option>
                            {% for floor in allFloors %}
                                {% if floor != 0 %}
                                    <option value="{{ floor }}" {% if floorFilter == floor %}selected{% endif %}>Étage {{ floor }}</option>
                                {% endif %}
                            {% endfor %}
                        </select>
                    </label>

                    <label for="stateFilter">
                        <select name="state" class="form-select custom-select" onchange="this.form.submit()">
                            <option value="all" {% if stateFilter == 'all' or not stateFilter %}selected{% endif %}>Tous les états</option>
                            {% for state in allStates %}
                                <option value="{{ state }}" {% if stateFilter == state %}selected{% endif %}>
                                    {{ state|capitalize }}
                                </option>
                            {% endfor %}
                        </select>
                    </label>

                </div>
            </div>
        </form>

        <div class="content">
            <table class="table table-hover table-centered text-center">
                <thead class="table-light">
                    <tr>
                        <th></th>
                        <th>Nom</th>
                        <th>Étage</th>
                        <th>Capteur associé</th>
                        {% if is_granted('ROLE_ADMIN') %}<th>Actions</th>{% endif %}
                    </tr>
                </thead>
                <tbody>
                {% for room in rooms %}
                    <tr>
                        <td>
                            <i class="bi-circle-fill
                                {% if room.state.value == 'ÉQUIPÉ' %}
                                    text-success
                                {% elseif room.state.value == 'DISPONIBLE' %}
                                    text-warning
                                {% else %}
                                    text-danger
                                {% endif %}"
                               data-bs-toggle="tooltip"
                               title="{{ room.state.value }}">
                            </i>
                        </td>
                        <td>{{ room.name }}</td>
                        <td>{{ room.floor == 0 ? 'Rez-de-chaussée' : room.floor }}</td>
                        <td>
                            {% if room.acquisitionSystem is not null and room.acquisitionSystem.id is not null %}
                                <span>
                                    <a href="{{ path('app_acquisition_system', { name: room.acquisitionSystem.name }) }}" class ="custom-link">
                                        {{ room.acquisitionSystem.name }}
                                    </a>
                                </span>
                            {% else %}
                                <span>---</span>
                            {% endif %}
                        </td>
                        {% if is_granted('ROLE_ADMIN') %}
                        <td>
                            {% if room.id is not null %}
                                {# Association/Dissociation conditionnelle #}
                                {% if room.acquisitionSystem is not null and room.acquisitionSystem.id is not null %}
                                    <a class="btn btn-secondary  me-2" href="{{ path('app_dissociateSAToRoom', {roomId: room.id}) }}">Dissocier</a>
                                {% else %}
                                    {# On vérifie l'état de la salle avant d'autoriser l'association #}
                                    {% if room.state.value == "DISPONIBLE" %}
                                        <a class="btn btn-success me-2" href="{{ path('app_associateSAToRoom', {roomId: room.id}) }}">Associer</a>
                                    {% endif %}
                                {% endif %}

                                <a href="{{ path('app_modify_room', { id: room.id }) }}" class="btn btn-warning text-white me-2">Modifier</a>

                                <form action="{{ path('app_delete_room', { id: room.id }) }}" method="post" style="display:inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer cette salle ?');">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete-room') }}">
                                    <button type="submit" class="btn btn-danger me-2">Supprimer</button>
                                </form>
                            {% else %}
                                <span>Modification impossible (ID manquant)</span>
                            {% endif %}
                        </td>
                        {% endif %}
                    </tr>
                {% endfor %}

                {# Si la liste rooms est vide #}
                {% if rooms is empty %}
                    <tr>
                        <td colspan="4">Aucune salle trouvée.</td>
                    </tr>
                {% endif %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}



