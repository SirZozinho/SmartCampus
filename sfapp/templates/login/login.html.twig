{% extends 'base.html.twig' %}

{% block title %}Connexion - Smart Campus{% endblock %}

{% block stylesheets %}
    <link href='https://fonts.googleapis.com/css?family=Lalezar' rel='stylesheet'>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="{{ asset('css/dashboard.css') }}">
    <style>

        .widget {
            background-color: rgba(95, 95, 95, 0.5);
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            padding: 20px ;
            max-width: 400px;
            width: 90%;
            margin: auto;
        }

        .content {
            margin-top: 18vh ;
            display: flex;
            justify-content: space-between;
            flex-direction: column;
            font-family: Lalezar, serif;
        }

        .main-title {
            text-align: center;
        }

        .element {
            margin: 5px;
            font-size: 20px;
        }

        .btn-outline-danger
        {
            color: red;
            border-color: red;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">Identifiant ou mot de passe invalide</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <div class="widget content">
                <h2 class="main-title">Connexion</h2>
                <div class="element">
                    <label for="username">Identifiant</label>
                    <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
                </div>
                <div class="element">
                    <label for="password">Mot de passe</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                </div>
                <input class="element" type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
                {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <input type="checkbox" name="_remember_me" id="_remember_me">
                    <label for="_remember_me">Remember me</label>
                </div>
                #}
                <br>
                <button class="btn btn-light element" type="submit">Se connecter</button>
                <button class="btn btn-danger element" type="button" onclick="window.location.href='/'">Annuler</button>
            </div>

        </form>

    </div>

{% endblock %}
