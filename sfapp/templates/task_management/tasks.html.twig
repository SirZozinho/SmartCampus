{% extends 'base.html.twig' %}

{% block title %}Gestion des tâches - Smart Campus{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Lalezar' rel='stylesheet'>
    <link rel="stylesheet" href="{{ asset('css/actions.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

    <style>

        h2{
            margin-top: 50px;
        }

    </style>

{% endblock %}

{% block body %}

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>

    <script src="{{ asset('js/search.js') }}"></script>

    <div class="container">
        <h1 class="main-title display-4 mb-4">Gestion des tâches</h1>

        {# Formulaire de recherche et filtres #}
        <form id="filterForm" method="get" action="{{ path('app_task_management') }}" class="widget-info-div row mb-3 g-2">
            <div class="search-bar-container">
                <div class="input-group mb-3">
                    <label for="searchBar" class="searchTextField">
                        <input type="text" id="searchBar" name="name" class="form-control" placeholder="Rechercher une tâche" value="{{ searchTerm }}" />
                    </label>

                    <button type="submit" class="btn btn-success bi bi-search"></button>
                    <button type="button" onclick="clearSearch()" class="btn btn-danger"><i class="bi bi-x-lg"></i></button>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_add_task') }}" class="btn btn-success custom-select">Ajouter une tâche</a>
                {% endif %}

                <div class="filter-selects">
                    <label for="priorityFilter">
                        <select name="priority" class="form-select custom-select" onchange="this.form.submit()">
                            <option value="all" {% if priorityStateFilter == 'all' or not priorityStateFilter %}selected{% endif %}>Toutes les priorités</option>
                            {% for priority in allPriority %}
                                <option value="{{ priority }}" {% if priorityStateFilter == priority %}selected{% endif %}>
                                    {{ priority|capitalize }}
                                </option>
                            {% endfor %}
                        </select>
                    </label>

                    <label for="advancementFilter">
                        <select name="advancement" class="form-select custom-select" onchange="this.form.submit()">
                            <option value="all" {% if advancementFilter == 'all' or not advancementFilter %}selected{% endif %}>Tous les états</option>
                            {% for advancement in allAdvancement %}
                                <option value="{{ advancement }}" {% if advancementFilter == advancement %}selected{% endif %}>{{ advancement|capitalize }}</option>
                            {% endfor %}
                        </select>
                    </label>

                    {% if is_granted('ROLE_ADMIN') %}
                        {% set displayedUsers = [] %}

                        <label for="userFilter">
                            <select name="user" class="form-select custom-select" onchange="this.form.submit()">
                                <option value="all" {% if userFilter == 'all' or not userFilter %}selected{% endif %}>Tous les techniciens</option>
                                {% for task in allTasks %}
                                    {% if task.user and task.user.id not in displayedUsers %}
                                        <option value="{{ task.user.id }}" {% if userFilter == task.user.id %}selected{% endif %}>
                                            {{ task.user.login }}
                                        </option>
                                        {% set displayedUsers = displayedUsers | merge([task.user.id]) %}
                                    {% endif %}
                                {% endfor %}
                            </select>
                        </label>
                    {% endif %}
                </div>

            </div>
        </form>

        {# Tableau des tâches en cours (Non-associé, À traiter, En cours) #}
        <div class="content">
            <h2>Tâches à traiter</h2>
            <table class="table table-hover table-centered text-center">
                <thead class="table-light">
                <tr>
                    <th></th>
                    <th>Tâche</th>
                    <th>Salle</th>
                    <th>Capteur concerné</th>
                    <th>Technicien associé</th>
                    <th>Avancement</th>
                    <th>Priorité</th>
                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                {% if tasks is empty %}
                    <tr>
                        <td colspan="8" class="text-center text-muted">Aucune tâche disponible.</td>
                    </tr>
                {% else %}
                    {% for task in tasks %}
                        {% if task.advancement.value in ['NON-ASSOCIÉ', 'À TRAITER', 'EN COURS'] %}
                            <tr>
                                <td>
                                    <i class="bi-circle-fill
                                            {% if task.advancement.value == 'NON-ASSOCIÉ' %} text-secondary
                                            {% elseif task.advancement.value == 'À TRAITER' %} text-danger
                                            {% elseif task.advancement.value == 'EN COURS' %} text-warning
                                            {% else %} text-success {% endif %}"
                                       data-bs-toggle="tooltip"
                                       title="{{ task.advancement.value }}">
                                    </i>
                                </td>
                                <td class="task-label">{{ task.label }}</td>
                                <td>{{ task.room.name }}</td>
                                <td>{{ task.acquisitionSystem.name }}</td>
                                <td>
                                    {% if task.user %} {{ task.user.login }} {% else %} Aucun Technicien {% endif %}
                                </td>
                                <td>{{ task.advancement.value }}</td>
                                <td>{{ task.priority.value }}</td>
                                <td>
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <a href="{{ path('app_modify_task', { id: task.id }) }}" class="btn btn-warning text-white me-2">Modifier</a>
                                    {% endif %}
                                    <a href="{{ path('app_mark_task_as_completed', { id: task.id }) }}" class="btn btn-success">Marquer comme terminé</a>
                                </td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                {% endif %}
                </tbody>
            </table>
        </div>

        {% if is_granted('ROLE_ADMIN') %}

            {# Tableau des tâches complétées #}
            <div class="content">
                <h2>Tâches Complétées</h2>
                <table class="table table-hover table-centered text-center">
                    <thead class="table-light">
                    <tr>
                        <th></th>
                        <th>Tâche</th>
                        <th>Salle</th>
                        <th>Capteur concerné</th>
                        <th>Technicien associé</th>
                        <th>Avancement</th>
                        <th>Priorité</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% if tasks is empty %}
                        <tr>
                            <td colspan="8" class="text-center text-muted">Aucune tâche disponible.</td>
                        </tr>
                    {% else %}
                        {% for task in tasks %}
                            {% if task.advancement.value == 'TERMINÉ' %}
                                <tr>
                                    <td>
                                        <i class="bi-circle-fill text-success"
                                        data-bs-toggle="tooltip"
                                        title="{{ task.advancement.value }}">
                                        </i>
                                    </td>
                                    <td class="task-label">{{ task.label }}</td>
                                    <td>{{ task.room.name }}</td>
                                    <td>{{ task.acquisitionSystem.name }}</td>
                                    <td>
                                        {% if task.user %} {{ task.user.login }} {% else %} Aucun Technicien {% endif %}
                                    </td>
                                    <td>{{ task.advancement.value }}</td>
                                    <td>{{ task.priority.value }}</td>
                                    <td>
                                        <a href="{{ path('app_modify_task', { id: task.id }) }}" class="btn btn-warning text-white me-2">Modifier</a>

                                        <form action="{{ path('app_delete_task', { id: task.id }) }}" method="post" style="display:inline;" onsubmit="return confirm('Voulez-vous vraiment confirmer la fin de cette tâche ?');">
                                            <button type="submit" class="btn btn-danger me-2">Supprimer</button>
                                        </form>
                                    </td>
                                </tr>
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                    </tbody>
                </table>
            </div>

    </div>

    {% endif %}

{% endblock %}
