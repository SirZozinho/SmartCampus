{% extends 'base.html.twig' %}

{% block title %}Ajouter un utilisateur | Smart Campus{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Lalezar' rel='stylesheet'>
    <link rel="stylesheet" href="{{ asset('css/actions.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
{% endblock %}

{% block body %}

    <div class="container">

        {% if error %}
            <div class="alert alert-danger">
                {{ error }}
            </div>
        {% endif %}

        <div class="widget">
            <h2>Ajout d'un technicien</h2>

            {{ form_start(registrationForm) }}
            {{ form_widget(registrationForm) }}
            <br>

            <div class = "button_form">
                <button class="btn btn-light element w-100" style="margin-right: 10px" type="submit">Confirmer</button>
                <button class="btn btn-danger element w-100" style="margin-left: 10px" type="button" onclick="window.location.href='/technicians'">Annuler</button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>

{% endblock %}
