{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs | Smart Campus{% endblock %}

{% block stylesheets %}

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Lalezar' rel='stylesheet'>
    <link rel="stylesheet" href="{{ asset('css/actions.css') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />

{% endblock %}

{% block body %}

    <script src="{{ asset('js/search.js') }}"></script>

    <div class="container">
        <h1  class="main-title display-4 mb-4">Gestion des techniciens</h1>

        {# Formulaire de recherche et filtres #}

        <form id="filterForm" method="get" action="{{ path('app_room') }}" class="widget-info-div row mb-3 g-2">
            <div class="search-bar-container">
                <div class="input-group mb-3">
                    <label for="searchBar" class="searchTextField">
                        <input type="text" id="searchBar" name="name" class="form-control" placeholder="Rechercher un technicien" value="{{ searchTerm }}" />
                    </label>
                    <button type="submit" class="btn btn-success bi bi-search"></button>
                    <button type="button" onclick="clearSearch()" class="btn btn-danger"><i class="bi bi-x-lg"></i></button>
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <a href="{{ path('app_user_add') }}" class="btn btn-success custom-select">Ajouter un technicien</a>
            </div>
        </form>


        <div class="content">
            <table class="table table-hover table-centered text-center">
                <thead class="table-light">
                    <tr>
                        <th>Nom du technicien</th>
                        <th>RÃ´le</th>
                        <th>Action(s)</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        {% if 'ROLE_USER' in user.roles and 'ROLE_ADMIN' not in user.roles %}
                        <tr>
                            <td>
                                {% if 'ROLE_USER' in user.roles %}
                                {{ user.login }}
                                {% endif %}
                            </td>
                            <td>
                                {% if 'ROLE_ADMIN' in user.roles %}
                                    Administrateur
                                {% else %}
                                    Technicien
                                {% endif %}
                            </td>

                            <td>
                                {% if 'ROLE_ADMIN' in user.roles %}

                                {% else %}
                                    <form action="{{ path('app_user_remove', { id: user.id }) }}" method="post" style="display:inline;" onsubmit="return confirm('Voulez-vous vraiment supprimer cet utilisateur ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-user') }}">
                                        <button type="submit" class="btn btn-danger me-2">Supprimer</button>
                                    </form>
                                {% endif %}
                            </td>
                        </tr>
                        {% endif %}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
