{% extends 'base.html.twig' %}

{% block title %}Gestion des utilisateurs | Smart Campus{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Lalezar' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="{{ asset('css/actions.css') }}"/>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="widget">
            <h2>Modifier le mot de passe</h2>
            {{ form_start(userPasswordForm) }}
            {{ form_widget(userPasswordForm) }}
            <br>

            <div class = "button_form">
                <button class="btn btn-light element w-100" style="margin-right: 10px" type="submit">Confirmer</button>
                <button class="btn btn-danger element w-100" style="margin-left: 10px" type="button" onclick="window.location.href='/tasks'">Annuler</button>
            </div>
            {{ form_end(userPasswordForm) }}
        </div>
    </div>
{% endblock %}