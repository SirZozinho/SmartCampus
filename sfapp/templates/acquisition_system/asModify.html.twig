{% extends 'base.html.twig' %}

{% block title %}Modification du système d'acquisition - Smart Campus{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href='https://fonts.googleapis.com/css?family=Lalezar' rel='stylesheet'>
    <link rel="stylesheet" href="{{ asset('css/actions.css') }}">
{% endblock %}

{% block body %}

    <div class="container">

        {# Display error message if any #}
        {% if error %}
            <div class="alert alert-danger">
                {{ error }}
            </div>
        {% endif %}

        <div class="widget">

            {# Title for the modification form #}
            <h2>Modification du système d'acquisition</h2>

            {# Start the form #}
            {{ form_start(form) }}

            {# Render all form fields #}
            {{ form_widget(form) }}

            <br>

            {# Buttons for submitting or canceling the form #}
            <div class="button_form">
                <button class="btn btn-light element w-100" style="margin-right: 10px" type="submit">Confirmer</button>
                <button class="btn btn-danger element w-100" style="margin-left: 10px" type="button" onclick="window.location.href='/acquisitionsystem'">Annuler</button>
            </div>

            {# End the form #}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
